{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // Change to ESNext for ESM output
    "moduleResolution":"NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
